<%- include('header') -%>
 <h1 id="heading"><%= day%></h1>
 <div class="wrapper">
   <div class="box">
  <div class="grid">
    <% newTodo.forEach(item =>{%>
      <form action="/delete" method="POST">
        <div class="item"><input type="checkbox"  onChange="this.form.submit()" name="checkbox"  value="<%=item._id%>"> <p><%=item.name%></p> </div>
      </form>      
      <%}) %>       
   </div>
   
   <div class="form-group">
     <form action="/" method="post" class="form-group__form">
       <input type="text" name="todo" placeholder="New Item" >
       <button type="submit"><i class="fas fa-plus"></i></button>
     </form>
   </div>

  </div>
  
<%- include('footer')-%>